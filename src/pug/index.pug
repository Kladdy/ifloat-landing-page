    h1.text-center.p-4.pt-5(class="animate__animated animate__fadeInUp") 
        .i18nelement(data-i18n='headers.people')

    div.d-flex.flex-wrap.justify-content-evenly.text-center(style="overflow: hidden")
        div.areas-boxes(class="animate__animated animate__fadeInRight animate__slow")
            img(src="assets/img/people/magnus.jpeg", alt="Magnus Bertilsson" width="100%" weight="100%")
            h3.pt-2 Magnus Bertilsson
            h5.i18nelement(data-i18n='people.titles.magnus')
        div.areas-boxes(class="animate__animated animate__fadeInRight animate__slow animate__delay-1s")
            img(src="assets/img/people/emil.jpeg", alt="Emil Sarling" width="100%" weight="100%")
            h3.pt-2 Emil Sarling
            h5.i18nelement(data-i18n='people.titles.emil')
        div.areas-boxes(class="animate__animated animate__fadeInRight animate__slow animate__delay-2s")
            img(src="assets/img/people/daniel.jpeg", alt="Daniel Nilsson" width="100%" weight="100%")
            h3.pt-2 Daniel Nilsson
            h5.i18nelement(data-i18n='people.titles.daniel')
        div.areas-boxes(class="animate__animated animate__fadeInRight animate__slow animate__delay-3s")
            img(src="assets/img/people/sigge.jpeg", alt="Sigge Stjärnholm" width="100%" weight="100%")
            h3.pt-2 Sigge Stjärnholm
            h5.i18nelement(data-i18n='people.titles.sigge')

    h1.text-center.p-4.pt-5() 
        .i18nelement(data-i18n='headers.sponsors')

    p.lead.text-center.pt-2.i18nelement.px-2.mx-2(data-i18n='texts.sponsors')

    a(href="https://profilewear.se")
        img.mx-auto.d-block(src="assets/img/icon-profilewear-logo.jpg", alt="Profilewear.se")

    h1.text-center.p-4.pt-5() 
        .i18nelement(data-i18n='headers.goal')

    p.lead.text-center.pt-2.i18nelement.px-2.mx-2(data-i18n='texts.goal')

    ul.list-to-be-centered()
        li.i18nelement(data-i18n='texts.goals.safety')
        li.i18nelement(data-i18n='texts.goals.construction')
        li.i18nelement(data-i18n='texts.goals.fun')

    h1.text-center.p-4.pt-5() 
        .i18nelement.pb-4(data-i18n='headers.pictures')

