    h4.text-center.p-4.pt-5() 
        .i18nelement.pb-4(data-i18n='texts.pictures.rafting')
        .pictures-class
            img(src="assets/img/rafting/crew_gangsign.jpeg")
            img(src="assets/img/rafting/boy_in_bag.jpeg")
            img(src="assets/img/rafting/thicc.jpeg")
